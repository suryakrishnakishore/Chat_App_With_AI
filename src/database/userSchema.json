{
  "$jsonSchema": {
    "bsonType": "object",
    "required": [
      "name",
      "email",
      "joinedAt"
    ],
    "properties": {
      "name": {
        "bsonType": "string",
        "description": "Full name of the user."
      },
      "email": {
        "bsonType": "string",
        "pattern": "^.+@.+\\..+$",
        "description": "Email must be valid."
      },
      "username": {
        "bsonType": [
          "string",
          "null"
        ],
        "description": "Unique username for tagging/mentions."
      },
      "phoneNumber": {
        "bsonType": [
          "string",
          "null"
        ],
        "description": "Phone number of the user (if phone login is used)."
      },
      "about": {
        "bsonType": [
          "string",
          "null"
        ],
        "maxLength": 100
      },
      "roles": {
        "bsonType": "array",
        "items": {
          "bsonType": "string"
        }
      },
      "profileImage": {
        "bsonType": [
          "string",
          "null"
        ]
      },
      "isOnline": {
        "bsonType": "bool"
      },
      "blockedUsers": {
        "bsonType": "array",
        "items": {
          "bsonType": "objectId"
        },
        "description": "Users blocked by this user."
      },
      "settings": {
        "bsonType": [
          "object",
          "null"
        ],
        "properties": {
          "theme": {
            "enum": [
              "light",
              "dark",
              "system"
            ]
          },
          "language": {
            "bsonType": "string"
          },
          "fontSize": {
            "enum": [
              "small",
              "medium",
              "large"
            ]
          },
          "privacy": {
            "bsonType": [
              "object",
              "null"
            ],
            "properties": {
              "lastSeen": {
                "enum": [
                  "everyone",
                  "contacts",
                  "nobody"
                ]
              },
              "profilePhoto": {
                "enum": [
                  "everyone",
                  "contacts",
                  "nobody"
                ]
              },
              "readReceipts": {
                "bsonType": "bool"
              },
              "aboutVisibility": {
                "enum": [
                  "everyone",
                  "contacts",
                  "nobody"
                ]
              }
            }
          }
        }
      },
      "lastSeen": {
        "bsonType": [
          "date",
          "null"
        ]
      },
      "joinedAt": {
        "bsonType": "date"
      }
    }
  }
}